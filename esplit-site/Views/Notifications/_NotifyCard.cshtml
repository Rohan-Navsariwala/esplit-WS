@{
}
@using Common.Types;
@model Notification;

<div class="list-group-item list-group-item-action mb-2 rounded-3 shadow-sm" id="Notification-@Model.NotificationID">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-2">
        <div class="fw-semibold">@Model.ActionPerformedBy</div>
        <small class="text-muted">@Model.CreatedOn.ToString("dd MMM yyyy, hh:mm tt")</small>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <div class="text-body flex-grow-1 me-3">
            @Model.NotificationText
        </div>
        <button class="btn btn-sm btn-outline-danger" onclick="deleteNotification(@Model.NotificationID)">
            Delete
        </button>
    </div>
</div>