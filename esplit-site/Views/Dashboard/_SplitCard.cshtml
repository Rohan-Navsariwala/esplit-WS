@{
}
<div class="card mb-3 shadow-sm">
	<div class="card-body d-flex justify-content-between align-items-center flex-wrap">

		<div class="me-3">
			<h6 class="mb-1">{{ title }}</h6>
			<small class="text-muted">Created By: {{ createdBy }}</small><br />
			<small class="text-muted">Due Amount: ₹{{ dueAmount }}</small>
		</div>

		<div class="mt-2 mt-md-0">
			<button class="btn btn-outline-info btn-sm me-2" (click)="viewContactStatus.emit()">
				View Contact Status
			</button>
			<button class="btn btn-outline-success btn-sm" (click)="okayClicked.emit()">
				Okay
			</button>
		</div>

	</div>
</div>
